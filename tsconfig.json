{
  "compilerOptions": {
    "target": "ES2019", // 출력물의 JS 버전
    "lib": ["ES2019", "DOM"], // Object.entries/fromEntries 지원 추가
    "module": "ESNext",
    "declaration": true, // 타입 선언 파일 생성
    "declarationDir": "dist/types",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "Node",
    "noImplicitAny": false
  },
  "include": ["src", "src/nps/types/global.d.ts"],
  "exclude": ["example"]
}
